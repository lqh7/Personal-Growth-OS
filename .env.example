# Application Settings
APP_NAME="Personal Growth OS"
DEBUG=True
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5174

# LLM Provider Configuration
# Options: openai, claude, ollama
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=""  # 可选：自定义API地址，如 https://api.openai-proxy.com/v1
OPENAI_MODEL=gpt-4o-mini

# Claude Configuration (Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_BASE=""  # 可选：自定义API地址
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Ollama Configuration (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Embedding Model (sentence-transformers)
# 用于本地向量生成，支持中英文
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Database Configuration (PostgreSQL + pgvector)
# 格式: postgresql://username:password@host:port/database_name
# 示例: postgresql://pgos_user:mypassword@139.224.62.197:5432/personal_growth_os
DATABASE_URL=postgresql://your_username:your_password@your_db_host:5432/personal_growth_os

# 注意事项:
# 1. 请确保PostgreSQL服务器已安装pgvector扩展
#    在PostgreSQL中执行: CREATE EXTENSION IF NOT EXISTS vector;
# 2. 推荐使用支持pgvector的云服务:
#    - Supabase (免费套餐)
#    - Neon (免费套餐)
#    - Railway
#    - Render
# 3. 向量维度: 384 (all-MiniLM-L6-v2模型)

# DingTalk Notification Settings
# 钉钉机器人通知配置(用于任务提醒)
DINGTALK_WEBHOOK=""  # 钉钉群机器人webhook地址(例: https://oapi.dingtalk.com/robot/send?access_token=...)
DINGTALK_SECRET=""   # 钉钉机器人加签密钥(可选,如启用了"加签"安全设置则需要填写)
ENABLE_TASK_REMINDER=True  # 是否启用任务提醒功能(True/False)
