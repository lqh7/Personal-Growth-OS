# Application Settings
APP_NAME="Personal Growth OS"
DEBUG=True
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5174

# LLM Provider Configuration
# Options: openai, claude, ollama
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=""  # 可选：自定义API地址，如 https://api.openai-proxy.com/v1
OPENAI_MODEL=gpt-4o-mini

# Claude Configuration (Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_BASE=""  # 可选：自定义API地址
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Ollama Configuration (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Database Configuration
# PostgreSQL连接字符串格式: postgresql://username:password@host:port/database_name
# 示例: postgresql://pgos_user:mypassword@db.example.com:5432/personal_growth_os
DATABASE_URL=postgresql://your_username:your_password@your_db_host:5432/personal_growth_os

# 注意: 请确保PostgreSQL服务器已安装pgvector扩展
# 执行: CREATE EXTENSION IF NOT EXISTS vector;
